<div class="profile-container">
    <div class="main-body">
        <div class="row">
            <div class="col-lg-4">
                <div class="profile-card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="/upload/{{customer.profile_image}}" alt="Admin" class="avatar"
                                width="350" height="350" border-radius="20">
                            <div class="mt-3">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="usr_profile_card">
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <p class="surname">{{customer.customer_surname}}</p>
                                <p class="name">{{customer.customer_name}}</p>
                                <p class="middle_name">{{customer.customer_patronymic}}</p>
                                <p class="email">{{customer.customer_email}}</p>
                                <p class="phone_number">{{customer.customer_phone_number}}</p>
                                <input type="button" class="Save" value="Сохранить">
                                <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
                                <script
                                    src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>
                                <script type="text/javascript">
                                </script>
                                <script>
                                    function myFunction() {
                                        var x = document.getElementById("myInput");
                                        if (x.type === "password") {
                                            x.type = "text";
                                        } else {
                                            x.type = "password";
                                        }
                                    }
                                </script>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>